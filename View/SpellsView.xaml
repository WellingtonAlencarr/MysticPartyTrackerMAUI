<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticPartyTracker.View.SpellsView"
             Title="SpellsView">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">


        <Label 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Large"
            Text="SpellsResult"/>

        <Label 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Text="{Binding Index}"/>

        <Label 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Text="{Binding Name}"/>


        <Label 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Text="{Binding Level}"/>

        <Button
               x:Name="SpellBtn"
               Text="Gerar Spell" 
               Command="{Binding SpellCommand}"
               HorizontalOptions="Fill" />

        <CollectionView ItemsSource="{Binding PreviousSpells}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </VerticalStackLayout>
</ContentPage>